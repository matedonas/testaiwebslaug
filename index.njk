---
layout: base.njk
title: "Slaugytojų kursai"
---
{% set home = app.pages.home %}
<section class="hero">
  <h1>{{ home.hero.headline }}</h1>
  <p>{{ home.hero.subline or home.hero.subheadline }}</p>
  <div>
    {% if home.hero.primaryCta %}
      <a class="btn primary" href="{{ home.hero.primaryCta.href }}">{{ home.hero.primaryCta.label }}</a>
    {% endif %}
    {% if home.hero.secondaryCta %}
      <a class="btn secondary" href="{{ home.hero.secondaryCta.href }}">{{ home.hero.secondaryCta.label }}</a>
    {% endif %}
  </div>
  <img src="/assets/img/hero.jpg" alt="{{ home.hero.image_slot.alt }}">
</section>

<section>
  <div class="usps">
    {% for u in home.usps %}<span class="badge">{{ u }}</span>{% endfor %}
  </div>
</section>

<section class="card">
  <p>{{ (home.locationsFormats and home.locationsFormats.lede) or home.locations_formats.lede }}</p>
  <p>{% set locs = (home.locationsFormats and home.locationsFormats.cities) or home.locations_formats.cities %}{% for c in locs %}{{ c }}{% if not loop.last %}, {% endif %}{% endfor %}</p>
</section>

{% if home.upcoming_dates and home.upcoming_dates.length %}
<section class="card">
  <h2>Artimiausios datos</h2>
  <ul>
    {% for d in home.upcoming_dates %}
      <li><a href="{{ d.href }}">{{ d.city }} — {{ d.date }}</a></li>
    {% endfor %}
  </ul>
</section>
{% endif %}

<section class="card">
  <p><a href="{{ (home.financingTeaser and home.financingTeaser.href) or home.financing_teaser.href }}">{{ (home.financingTeaser and home.financingTeaser.line) or home.financing_teaser.line }}</a></p>
  <p><a href="{{ (home.competenciesTeaser and home.competenciesTeaser.href) or (home.competencijos_teaser and home.competencijos_teaser.href) }}">{{ (home.competenciesTeaser and home.competenciesTeaser.line) or (home.competencijos_teaser and home.competencijos_teaser.lede) }}</a></p>
</section>

<section class="card">
  <p>{{ home.cta_band.text }}</p>
  <a class="btn primary" href="{{ home.cta_band.primary_cta.href }}">{{ home.cta_band.primary_cta.label }}</a>
  <a class="btn secondary" href="{{ home.cta_band.secondary_cta.href }}">{{ home.cta_band.secondary_cta.label }}</a>
</section>

