<!doctype html>
<html lang="{{ app.site.language | default('lt') }}">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or 'Slaugytoj≈≥ kursai' }}</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Source+Code+Pro&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/assets/styles.css">
  <style>
    :root{
      --c-primary: {{ app.styles.colors.primary }};
      --c-primary-dark: {{ app.styles.colors.primaryDark }};
      --c-secondary: {{ app.styles.colors.secondary }};
      --c-accent: {{ app.styles.colors.accent }};
      --c-success: {{ app.styles.colors.success }};
      --c-error: {{ app.styles.colors.error }};
